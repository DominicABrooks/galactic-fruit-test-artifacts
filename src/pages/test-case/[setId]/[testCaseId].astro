---
import MainLayout from "../../../layouts/MainLayout.astro";

// Generate static paths for all test cases
export async function getStaticPaths() {
    // Load test sets
    const testSetsModule = await import("../../../../public/data/testSets.json");
    const testSets = testSetsModule.default?.sets || testSetsModule.sets || [];
    
    const paths = [];
    
    // For each test set, load its manifest and generate paths
    for (const set of testSets) {
        try {
            const manifestModule = await import(`../../../../public/data/testCases/${set.id}/manifest.json`);
            const files = manifestModule.default || manifestModule;
            
            // For each test case file in the manifest
            for (const file of files) {
                const testCaseId = file.replace('.json', '');
                paths.push({
                    params: { setId: set.id, testCaseId: testCaseId }
                });
            }
        } catch (e) {
            console.error(`Failed to load manifest for set ${set.id}`, e);
        }
    }
    
    return paths;
}

const { setId, testCaseId } = Astro.params;

// Fetch the test case data
let testCaseDef: any = null;
let errorMessage: string | null = null;

try {
    const testCaseModule = await import(`../../../../public/data/testCases/${setId}/${testCaseId}.json`);
    testCaseDef = testCaseModule.default || testCaseModule;
} catch (e) {
    console.error(`Failed to load test case ${testCaseId} from set ${setId}`, e);
    errorMessage = `Test case ${testCaseId} not found in set ${setId}`;
}

const BASE = import.meta.env.BASE_URL || "/";
---

<MainLayout title={testCaseDef ? testCaseDef.name : "Test Case Not Found"} currentPath="/test-execution">
    <div class="flex flex-col h-[calc(100vh-140px)]">
        {errorMessage ? (
            <div class="flex items-center justify-center h-full">
                <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-8 text-center">
                    <svg class="w-16 h-16 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <h2 class="text-xl font-bold text-white mb-2">Test Case Not Found</h2>
                    <p class="text-red-400">{errorMessage}</p>
                    <a href={BASE} class="inline-block mt-4 px-6 py-2 bg-eoe-accent hover:bg-blue-600 text-white font-medium rounded-lg transition-colors">
                        Return to Home
                    </a>
                </div>
            </div>
        ) : testCaseDef && (
            <div class="bg-eoe-panel border border-white/5 rounded-xl overflow-hidden flex flex-col h-full">
                <div class="p-6 border-b border-white/5 flex items-center gap-4 bg-white/[0.02]">
                    <a href={BASE} class="p-2 hover:bg-white/10 rounded-lg transition-colors text-eoe-muted hover:text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                    </a>
                    <div>
                        <h2 class="text-xl font-bold text-white">{testCaseDef.name}</h2>
                        <div class="flex items-center gap-3 mt-1">
                            <span class="text-xs font-mono bg-white/10 px-2 py-0.5 rounded text-eoe-muted">{testCaseDef.id}</span>
                        </div>
                    </div>
                </div>
                <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
                    <div class="max-w-4xl mx-auto space-y-8 pb-8">
                        <!-- Test Case Metadata -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-4 max-h-40 flex flex-col">
                                <h4 class="text-xs text-eoe-muted uppercase tracking-wider mb-2 flex-shrink-0">Description</h4>
                                <p class="text-sm text-white overflow-y-auto custom-scrollbar flex-1">{testCaseDef.description || '-'}</p>
                            </div>
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-4 max-h-40 flex flex-col">
                                <h4 class="text-xs text-eoe-muted uppercase tracking-wider mb-2 flex-shrink-0">Test Objective</h4>
                                <p class="text-sm text-white overflow-y-auto custom-scrollbar flex-1">{testCaseDef.testObjective || '-'}</p>
                            </div>
                        </div>

                        <!-- Metadata Grid -->
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-3 text-center">
                                <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Priority</div>
                                <div class="text-sm font-medium text-white">{testCaseDef.priority || '-'}</div>
                            </div>
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-3 text-center">
                                <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Type</div>
                                <div class="text-sm font-medium text-white">{testCaseDef.type || '-'}</div>
                            </div>
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-3 text-center">
                                <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Author</div>
                                <div class="text-sm font-medium text-white">{testCaseDef.author || '-'}</div>
                            </div>
                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-3 text-center">
                                <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Est. Time</div>
                                <div class="text-sm font-medium text-white">{testCaseDef.estimatedExecutionTime || '-'}</div>
                            </div>
                        </div>

                        <!-- Preconditions -->
                        {testCaseDef.preconditions && testCaseDef.preconditions.length > 0 && (
                            <div class="bg-blue-500/5 border border-blue-500/10 rounded-xl p-6">
                                <h3 class="text-sm font-semibold text-blue-400 uppercase tracking-wider mb-3 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Preconditions
                                </h3>
                                <ul class="space-y-2">
                                    {testCaseDef.preconditions.map((pc: string) => (
                                        <li class="flex items-start gap-2 text-sm text-white">
                                            <svg class="w-4 h-4 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                            <span>{pc}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        )}

                        <!-- Test Data -->
                        {testCaseDef.testData && Object.keys(testCaseDef.testData).length > 0 && (
                            <div class="bg-white/[0.02] border border-white/5 rounded-xl p-6">
                                <h3 class="text-sm font-semibold text-eoe-muted uppercase tracking-wider mb-3">Test Data</h3>
                                <div class="font-mono text-xs bg-black/40 rounded p-4 overflow-auto custom-scrollbar max-h-60">
                                    {JSON.stringify(testCaseDef.testData, null, 2)}
                                </div>
                            </div>
                        )}

                        <!-- Test Steps -->
                        <div>
                            <h3 class="text-sm font-semibold text-eoe-muted uppercase tracking-wider mb-4">Test Steps</h3>
                            <div class="space-y-4">
                                <div class="relative border-l-2 border-white/10 ml-3 pl-8 space-y-8 py-2">
                                    {testCaseDef.steps.map((step: any) => (
                                        <div class="relative">
                                            <div class="absolute -left-[41px] top-0 w-6 h-6 rounded-full bg-eoe-panel border border-white/20 flex items-center justify-center text-xs text-eoe-muted font-mono">
                                                {step.step}
                                            </div>
                                            <div class="bg-white/[0.02] border border-white/5 rounded-lg p-4 hover:border-white/10 transition-colors">
                                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                                    <div>
                                                        <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Action</div>
                                                        <div class="text-sm text-white">{step.action}</div>
                                                        {step.testData && (
                                                            <div class="mt-2 text-xs text-blue-300 font-mono">Data: {step.testData}</div>
                                                        )}
                                                    </div>
                                                    <div>
                                                        <div class="text-xs text-eoe-muted uppercase tracking-wider mb-1">Expected Result</div>
                                                        <div class="text-sm text-eoe-text">{step.expected}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>

                        <!-- Postconditions -->
                        {testCaseDef.postconditions && testCaseDef.postconditions.length > 0 && (
                            <div class="bg-green-500/5 border border-green-500/10 rounded-xl p-6">
                                <h3 class="text-sm font-semibold text-green-400 uppercase tracking-wider mb-3 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Postconditions
                                </h3>
                                <ul class="space-y-2">
                                    {testCaseDef.postconditions.map((pc: string) => (
                                        <li class="flex items-start gap-2 text-sm text-white">
                                            <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            <span>{pc}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        )}

                        <!-- Tags -->
                        {testCaseDef.tags && testCaseDef.tags.length > 0 && (
                            <div>
                                <h3 class="text-sm font-semibold text-eoe-muted uppercase tracking-wider mb-3">Tags</h3>
                                <div class="flex flex-wrap gap-2">
                                    {testCaseDef.tags.map((tag: string) => (
                                        <span class="text-xs bg-purple-500/10 text-purple-300 px-3 py-1 rounded-full border border-purple-500/20">
                                            #{tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            </div>
        )}
    </div>
</MainLayout>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }
</style>
