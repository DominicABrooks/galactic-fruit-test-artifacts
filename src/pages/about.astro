---
import MainLayout from "../layouts/MainLayout.astro";

const contributors = [
    {
        name: "Dominic Brooks",
        role: "QA Lead",
        linkedin: "https://linkedin.com/in/domab/",
        email: "domab2020@gmail.com",
        portfolio: "https://dominicabrooks.github.io",
        avatar: "https://avatars.githubusercontent.com/u/51772450?v=4",
        github: "https://github.com/dominicabrooks",
    },
    {
        name: "Christopher Rojas",
        role: "QA Analyst",
        github: "https://github.com/CR3XX12",
        linkedin: "https://www.linkedin.com/in/chris-alexander-rojas-24a802230/",
        email: "crex.a10@hotmail.com",
        avatar: "https://media.licdn.com/dms/image/v2/D5635AQEM2ij6kUWtww/profile-framedphoto-shrink_200_200/B56ZYL0ZvXGsAY-/0/1743955008813?e=1765753200&v=beta&t=Z3lYJJ3Q-XZkrdNGO7x0lPQSDLTEJhXN5HqmRinpCAA",
    },
    // {
    //     name: "Mike Ross",
    //     role: "QA Analyst",
    //     github: "https://github.com/example",
    //     avatar: "https://ui-avatars.com/api/?name=Mike+Ross&background=10b981&color=fff",
    // },
];
---

<MainLayout title="About Us" currentPath="/about">
    <div class="space-y-12">
        <!-- Mission Section -->
        <div class="max-w-3xl">
            <h2 class="text-2xl font-bold text-white mb-4">Our Mission</h2>
            <p class="text-galactic-fruit-muted leading-relaxed mb-6">
                We're testers on Galactic Fruit, a game moving fast through its final development phase. As the release date neared and more bugs appeared, we put together a formal testing plan to keep the project on track and ensure a high-quality launch.
            </p>
            <p class="text-galactic-fruit-muted leading-relaxed">
                This archive documents that journey from the initial test
                planning to the final execution and defect tracking.
            </p>
        </div>

        <!-- Contributors Section -->
        <div>
            <h2 class="text-2xl font-bold text-white mb-8">
                Here are the people who made it happen
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    contributors.map((member) => (
                        <div class="bg-galactic-fruit-panel border border-white/5 rounded-xl p-6 flex flex-col gap-4 hover:border-white/10 transition-colors group">
                            <div class="flex items-center gap-4">
                                <img
                                    src={member.avatar}
                                    alt={member.name}
                                    class="w-16 h-16 rounded-full border-2 border-white/10 group-hover:border-galactic-fruit-accent/50 transition-colors"
                                />
                                <div>
                                    <h3 class="font-bold text-white">
                                        {member.name}
                                    </h3>
                                    <p class="text-xs text-galactic-fruit-accent uppercase tracking-wider">
                                        {member.role}
                                    </p>
                                </div>
                            </div>

                            <div class="border-t border-white/5 pt-4 flex flex-wrap gap-3">
                                {member.linkedin && (
                                    <a
                                        href={member.linkedin}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="p-2 bg-white/5 rounded-lg text-galactic-fruit-muted hover:text-[#0077b5] hover:bg-white/10 transition-colors"
                                        title="LinkedIn"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                                        </svg>
                                    </a>
                                )}
                                {member.email && (
                                    <a
                                        href={`mailto:${member.email}`}
                                        class="p-2 bg-white/5 rounded-lg text-galactic-fruit-muted hover:text-green-400 hover:bg-white/10 transition-colors"
                                        title="Email"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                            />
                                        </svg>
                                    </a>
                                )}
                                {member.portfolio && (
                                    <a
                                        href={member.portfolio}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="p-2 bg-white/5 rounded-lg text-galactic-fruit-muted hover:text-purple-400 hover:bg-white/10 transition-colors"
                                        title="Portfolio"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                            />
                                        </svg>
                                    </a>
                                )}
                                {member.github && (
                                    <a
                                        href={member.github}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="p-2 bg-white/5 rounded-lg text-galactic-fruit-muted hover:text-white hover:bg-white/10 transition-colors"
                                        title="GitHub"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                    </a>
                                )}
                                {}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Contact Section -->
        <div class="bg-white/[0.02] border border-white/5 p-6 rounded-lg">
            <h2 class="text-xl font-bold text-white mb-4">Contact Us</h2>
            <p class="text-galactic-fruit-muted mb-4">
                Have questions about our testing methodologies or found a bug in
                the game? Reach out to us.
            </p>
            <a
                href="mailto:domab2020@gmail.com"
                class="inline-flex items-center gap-2 text-galactic-fruit-accent hover:text-white transition-colors"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path></svg
                >
                domab2020@gmail.com
            </a>
        </div>
    </div>
</MainLayout>
