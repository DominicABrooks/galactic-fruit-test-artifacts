---
import MainLayout from "../../layouts/MainLayout.astro";
import type { MarkdownInstance } from 'astro';

interface Frontmatter {
  id: string;
  title: string;
  category: string;
  author?: string;
  derivedFeatures: string[];
}

export async function getStaticPaths() {
  const notes: MarkdownInstance<Frontmatter>[] = await Astro.glob<Frontmatter>('../../content/exploratory/*.md');
  return notes.map((note: MarkdownInstance<Frontmatter>) => ({
    params: { id: note.frontmatter.id },
    props: { note },
  }));
}

interface Props {
  note: MarkdownInstance<Frontmatter>;
}

const { note } = Astro.props;
const { Content } = note;
const { id, title, category, author, derivedFeatures } = note.frontmatter;

const BASE = import.meta.env.BASE_URL || "/";
const BASE_SLASH = BASE.endsWith("/") ? BASE : BASE + "/";
const makePath = (p: string) => `${BASE_SLASH}${p.replace(/^\//, "")}`;
---

<MainLayout title={`Exploratory Note: ${id}`} currentPath="/test-execution">
    <div class="max-w-4xl mx-auto pb-20">
        <div class="mb-8">
            <button onclick="history.back()" class="text-Galactic Fruit-muted hover:text-white flex items-center gap-2 text-sm transition-colors bg-transparent border-none cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back
            </button>
        </div>

        <div class="bg-Galactic Fruit-panel border border-white/5 rounded-xl overflow-hidden">
            <div class="p-8 border-b border-white/5 bg-white/[0.02]">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex items-center gap-3">
                        <span class="font-mono text-sm bg-purple-500/20 text-purple-300 px-3 py-1 rounded-md border border-purple-500/20">
                            {id}
                        </span>
                        <span class="text-sm font-medium text-Galactic Fruit-muted uppercase tracking-wider border border-white/10 px-3 py-1 rounded-md">
                            {category}
                        </span>
                    </div>
                    <div class="text-right">
                        <span class="block text-xs text-Galactic Fruit-muted uppercase tracking-wider mb-1">Author</span>
                        <span class="text-white font-medium">{author || 'Unknown'}</span>
                    </div>
                </div>
                <h1 class="text-3xl font-bold text-white mb-2">{title}</h1>
            </div>

            <div class="p-8">
                <div class="prose prose-invert">
                    <Content />
                </div>

                <div class="border-t border-white/5 pt-6">
                    <h3 class="text-sm font-medium text-white mb-3 uppercase tracking-wider">Derived Features</h3>
                    <div class="flex flex-wrap gap-2">
                        {derivedFeatures && derivedFeatures.map((feature: string) => (
                            <span class="text-sm bg-white/5 text-white px-3 py-1.5 rounded-md border border-white/5 hover:border-white/10 transition-colors">
                                {feature}
                            </span>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
