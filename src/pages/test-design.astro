import MainLayout from "../layouts/MainLayout.astro";

// Load Test Conditions from split JSON files
const conditionFiles = await import.meta.glob('../data/analysis/conditions/*.json', { eager: true });
let testConditions: any[] = [];
Object.values(conditionFiles).forEach((mod: any) => {
    const conditions = mod.default || mod;
    if (Array.isArray(conditions)) {
        testConditions.push(...conditions);
    }
});

// Sort conditions by ID
testConditions.sort((a, b) => a.id.localeCompare(b.id));

// Flatten to a list of { condition, testCaseId } for the table
const tableData: any[] = [];
testConditions.forEach(c => {
    if (c.linkedTestCases && c.linkedTestCases.length > 0) {
        c.linkedTestCases.forEach((tcId: string) => {
            tableData.push({
                condition: c.condition,
                testCaseId: tcId
            });
        });
    }
});

// Load exploratory notes to extract derived features
const exploratoryFiles = await import.meta.glob('../content/exploratory/*.md', { eager: true });
const allDerivedFeatures = new Set<string>();
const featureCoverage = new Map<string, Set<string>>();

Object.values(exploratoryFiles).forEach((mod: any) => {
    const frontmatter = mod.frontmatter || {};
    const derivedFeatures = frontmatter.derivedFeatures || [];
    
    derivedFeatures.forEach((feature: string) => {
        allDerivedFeatures.add(feature);
        if (!featureCoverage.has(feature)) {
            featureCoverage.set(feature, new Set());
        }
    });
});

// Map features to test cases by checking conditions
testConditions.forEach(c => {
    // Try to match condition text to features
    const conditionText = c.condition.toLowerCase();
    
    featureCoverage.forEach((testCases, feature: string) => {
        const featureLower = feature.toLowerCase();
        if (conditionText.includes(featureLower) || featureLower.includes(conditionText.split(' ')[0])) {
            if (c.linkedTestCases && c.linkedTestCases.length > 0) {
                c.linkedTestCases.forEach((tcId: string) => testCases.add(tcId));
            }
        }
    });
});

// Calculate coverage stats
const coverageData: any[] = [];
featureCoverage.forEach((testCases, feature: string) => {
    const testCaseCount = testCases.size;
    const hasCoverage = testCaseCount > 0;
    coverageData.push({
        feature,
        testCaseCount,
        hasCoverage,
        testCaseIds: Array.from(testCases)
    });
});

// Sort by feature name
coverageData.sort((a, b) => a.feature.localeCompare(b.feature));

// Calculate overall coverage percentage
const totalFeatures = allDerivedFeatures.size;
const coveredFeatures = coverageData.filter(f => f.hasCoverage).length;
const coveragePercentage = totalFeatures > 0 ? Math.round((coveredFeatures / totalFeatures) * 100) : 0;
