---
import MainLayout from "../layouts/MainLayout.astro";

// Fetch Stats
const defectsGlob = import.meta.glob('/public/data/defects/*.json', { eager: true });
const defectsCount = Object.keys(defectsGlob).length;
const sampleDefects = Object.values(defectsGlob).slice(0, 5).map((file: any) => file.default || file);

const allFiles = import.meta.glob('/public/data/testCases/**/*.json', { eager: true });

// Filter out all manifest.json files
const testCaseFiles = Object.fromEntries(
    Object.entries(allFiles).filter(([path]) => !path.endsWith('manifest.json'))
);

const testCasesCount = Object.keys(testCaseFiles).length;
const sampleTestCases = Object.entries(testCaseFiles).slice(0, 5).map(([path, file]: [string, any]) => {
    // Extract setId from path: /public/data/testCases/intro-tests/TC-INTRO-001.json -> intro-tests
    const pathParts = path.split('/');
    const setId = pathParts[pathParts.length - 2];
    
    return {
        ...(file.default || file),
        path: path,
        setId: setId
    };
});

const exploratoryNotes = await Astro.glob('../content/exploratory/*.md');
const exploratoryCount = exploratoryNotes.length;
const sampleExploratory = exploratoryNotes.slice(0, 5);
---

<MainLayout title="Home" currentPath="/">
    <div class="space-y-12">
        <!-- Hero Section -->
        <div
            class="relative overflow-hidden rounded-2xl bg-galactic-fruit-panel border border-white/5 p-8 md:p-12"
        >
            <div class="relative z-10 max-w-2xl">
                <h1
                    class="text-3xl md:text-4xl font-bold text-white mb-6 leading-tight"
                >
                    How we tested <span class="text-galactic-fruit-accent"
                        >Galactic Fruit</span
                    >
                </h1>
                <p class="text-lg text-galactic-fruit-muted mb-8 leading-relaxed">
                    This is an archive of the quality assurance artifacts, test
                    plans, and execution results for the singleplayer horror
                    game
                    <a
                        href="https://store.steampowered.com/app/3049470/Echoes_of_Exile/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-galactic-fruit-accent hover:underline"
                        >Galactic Fruit</a
                    >. Explore the strategies, plans, and results of our QA
                    process.
                </p>
                <div class="flex gap-4">
                    <a
                        href={import.meta.env.BASE_URL + "/test-planning"}
                        class="px-6 py-3 bg-galactic-fruit-accent hover:bg-blue-600 text-white font-medium rounded-lg transition-colors"
                    >
                        View Test Plan
                    </a>
                    <a
                        href={import.meta.env.BASE_URL + "/about"}
                        class="px-6 py-3 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg transition-colors border border-white/10"
                    >
                        Meet the Team
                    </a>
                </div>
            </div>

            <!-- Decorative background element -->
            <!-- <div
                class="absolute top-0 right-0 w-1/2 h-full bg-galactic-fruit-accent/5 pointer-events-none"
            >
            </div> -->
        </div>

        <!-- Project Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Test Cases -->
            <div class="relative bg-blue-500/5 border border-blue-500/10 rounded-2xl p-6 group hover:bg-blue-500/10 transition-all duration-500 overflow-visible">
                <div class="absolute -right-4 -bottom-4 opacity-10 group-hover:opacity-20 transition-opacity transform group-hover:scale-110 group-hover:-rotate-12 duration-500 overflow-hidden rounded-2xl">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24"><path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                </div>
                <div class="relative z-10">
                    <div class="text-4xl md:text-5xl font-black text-white mb-2">{testCasesCount}</div>
                    <div class="h-1 w-12 bg-blue-500 rounded-full mb-4 group-hover:w-20 transition-all duration-500"></div>
                    <div class="text-sm font-bold text-blue-300 uppercase tracking-wider">Test Cases Created</div>
                </div>
                
                <!-- Dropdown -->
                <div class="absolute left-0 right-0 top-full mt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-20">
                    <div class="bg-galactic-fruit-panel border border-blue-500/20 rounded-xl p-4 shadow-xl backdrop-blur-sm">
                        <div class="text-xs font-bold text-blue-300 uppercase tracking-wider mb-3">Sample Test Cases</div>
                        <div class="space-y-2">
                            {sampleTestCases.map((tc) => (
                                tc.id !== undefined && (
                                    <a href={import.meta.env.BASE_URL + `/test-case/${tc.setId}/${tc.id}`} class="block p-2 rounded-lg hover:bg-white/5 transition-colors">
                                        <div class="text-xs font-mono text-blue-400">{tc.id}</div>
                                        <div class="text-xs text-galactic-fruit-muted truncate">{tc.name}</div>
                                    </a>
                                )
                            ))}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charters -->
            <div class="relative bg-purple-500/5 border border-purple-500/10 rounded-2xl p-6 group hover:bg-purple-500/10 transition-all duration-500 overflow-visible">
                <div class="absolute -right-4 -bottom-4 opacity-10 group-hover:opacity-20 transition-opacity transform group-hover:scale-110 group-hover:-rotate-12 duration-500 overflow-hidden rounded-2xl">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24"><path d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
                </div>
                <div class="relative z-10">
                    <div class="text-4xl md:text-5xl font-black text-white mb-2">{exploratoryCount}</div>
                    <div class="h-1 w-12 bg-purple-500 rounded-full mb-4 group-hover:w-20 transition-all duration-500"></div>
                    <div class="text-sm font-bold text-purple-300 uppercase tracking-wider">Exploratory Notes</div>
                </div>
                
                <!-- Dropdown -->
                <div class="absolute left-0 right-0 top-full mt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-20">
                    <div class="bg-galactic-fruit-panel border border-purple-500/20 rounded-xl p-4 shadow-xl backdrop-blur-sm">
                        <div class="text-xs font-bold text-purple-300 uppercase tracking-wider mb-3">Sample Exploratory Notes</div>
                        <div class="space-y-2">
                            {sampleExploratory.map((note) => (
                                <a href={import.meta.env.BASE_URL + `/exploratory/${note.frontmatter.id}`} class="block p-2 rounded-lg hover:bg-white/5 transition-colors">
                                    <div class="text-xs font-mono text-purple-400">{note.frontmatter.id}</div>
                                    <div class="text-xs text-galactic-fruit-muted truncate">{note.frontmatter.title}</div>
                                </a>
                            ))}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Defects -->
            <div class="relative bg-red-500/5 border border-red-500/10 rounded-2xl p-6 group hover:bg-red-500/10 transition-all duration-500 overflow-visible">
                <div class="absolute -right-4 -bottom-4 opacity-10 group-hover:opacity-20 transition-opacity transform group-hover:scale-110 group-hover:-rotate-12 duration-500 overflow-hidden rounded-2xl">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24"><path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                </div>
                <div class="relative z-10">
                    <div class="text-4xl md:text-5xl font-black text-white mb-2">{defectsCount}</div>
                    <div class="h-1 w-12 bg-red-500 rounded-full mb-4 group-hover:w-20 transition-all duration-500"></div>
                    <div class="text-sm font-bold text-red-300 uppercase tracking-wider">Defects Identified</div>
                </div>
                
                <!-- Dropdown -->
                <div class="absolute left-0 right-0 top-full mt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-20">
                    <div class="bg-galactic-fruit-panel border border-red-500/20 rounded-xl p-4 shadow-xl backdrop-blur-sm">
                        <div class="text-xs font-bold text-red-300 uppercase tracking-wider mb-3">Sample Defects</div>
                        <div class="space-y-2">
                            {sampleDefects.map((defect) => (
                                <a href={import.meta.env.BASE_URL + `/defects/${defect.id}`} class="block p-2 rounded-lg hover:bg-white/5 transition-colors">
                                    <div class="text-xs font-mono text-red-400">{defect.id}</div>
                                    <div class="text-xs text-galactic-fruit-muted truncate">{defect.summary}</div>
                                </a>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- About Section Preview -->
        <div
            class="bg-white/[0.02] border border-white/5 rounded-xl p-8 flex flex-col md:flex-row items-center gap-8"
        >
            <div class="flex-1">
                <h3 class="text-2xl font-bold text-white mb-4">Why We Test</h3>
                <p class="text-galactic-fruit-muted mb-4">
                    Galactic Fruit is a passion project that has been in work
                    since 2024. Meet the testing team that helped ship this
                    game.
                </p>
                <a
                    href={import.meta.env.BASE_URL + "/about"}
                    class="text-galactic-fruit-accent hover:text-white transition-colors font-medium inline-flex items-center gap-2"
                >
                    Learn more about us
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                    >
                </a>
            </div>
            <div
                class="w-full md:w-1/3 aspect-video bg-black/20 rounded-lg border border-white/10 overflow-hidden"
            >
                <video
                    src="https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/3049470/extras/18454de2c9ca513a33282958d3119e74.webm?t=1745092982"
                    autoplay
                    loop
                    muted
                    playsinline
                    class="w-full h-full object-cover"
                ></video>
            </div>
        </div>
    </div>
</MainLayout>
