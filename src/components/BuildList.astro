---
interface Props {
    builds: any[];
}

const { builds } = Astro.props;
---

<div class="space-y-2">
    <h3 class="text-xs font-semibold text-eoe-muted uppercase tracking-wider mb-3 px-2">Executions</h3>
    <div class="space-y-1">
        {builds.map((build) => (
            <button
                class="build-item w-full text-left px-4 py-3 rounded-lg text-sm transition-all duration-200 hover:bg-white/5 border border-transparent hover:border-white/10 group relative overflow-hidden"
                data-id={build.id}
            >
                <div class="flex justify-between items-center mb-1">
                    <span class="font-medium text-white group-hover:text-eoe-accent transition-colors">{build.name}</span>
                    <span class={`text-[10px] px-2 py-0.5 rounded-full border ${
                        build.status === 'Completed' ? 'bg-green-500/10 text-green-400 border-green-500/20' : 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20'
                    }`}>
                        {build.status}
                    </span>
                </div>
                <div class="flex justify-between items-center text-xs text-eoe-muted">
                    <span>{build.date}</span>
                    <span>Pass Rate: <span class={build.passRate >= 90 ? 'text-green-400' : 'text-yellow-400'}>{build.passRate}%</span></span>
                </div>
                
                <!-- Active indicator (hidden by default) -->
                <div class="active-indicator absolute left-0 top-0 bottom-0 w-1 bg-eoe-accent opacity-0 transition-opacity"></div>
            </button>
        ))}
    </div>
</div>
