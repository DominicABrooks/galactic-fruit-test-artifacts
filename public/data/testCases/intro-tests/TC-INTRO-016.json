    ],
    "testData": {},
    "steps": [
        {
            "step": 1,
            "action": "Press [W] key",
            "expected": "Camera view moves upward smoothly"
        },
        {
            "step": 2,
            "action": "Press [S] key",
            "expected": "Camera view moves downward smoothly"
        },
        {
            "step": 3,
            "action": "Press [A] key",
            "expected": "Camera view moves left smoothly"
        },
        {
